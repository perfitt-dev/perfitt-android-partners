<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_foot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_geo_foot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_start_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/term_left_foot"
        android:textAppearance="@style/body_2"
        android:textColor="@color/black_60"
        app:layout_constraintBottom_toTopOf="@+id/txt_start_length"
        app:layout_constraintEnd_toStartOf="@+id/txt_length_sub_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_foot"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_start_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textAppearance="@style/barlow_body_1"
        android:textColor="@color/text_header"
        app:layout_constraintBottom_toTopOf="@+id/txt_start_width"
        app:layout_constraintEnd_toEndOf="@+id/txt_start_foot"
        app:layout_constraintStart_toStartOf="@+id/txt_start_foot"
        app:layout_constraintTop_toBottomOf="@+id/txt_start_foot"
        tools:text="240mm" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_start_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/barlow_body_1"
        android:textColor="@color/text_header"
        app:layout_constraintEnd_toEndOf="@+id/txt_start_length"
        app:layout_constraintStart_toStartOf="@+id/txt_start_length"
        app:layout_constraintTop_toBottomOf="@+id/txt_start_length"
        tools:text="240mm" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_end_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/term_right_foot"
        android:textAppearance="@style/body_2"
        android:textColor="@color/black_60"
        app:layout_constraintBottom_toTopOf="@+id/txt_end_length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_length_sub_title"
        app:layout_constraintTop_toBottomOf="@+id/img_foot"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_end_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textAppearance="@style/barlow_body_1"
        android:textColor="@color/text_header"
        app:layout_constraintBottom_toTopOf="@+id/txt_end_width"
        app:layout_constraintEnd_toEndOf="@+id/txt_end_foot"
        app:layout_constraintStart_toStartOf="@+id/txt_end_foot"
        app:layout_constraintTop_toBottomOf="@+id/txt_end_foot"
        tools:text="240mm" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_end_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="@style/barlow_body_1"
        android:textColor="@color/text_header"
        app:layout_constraintBottom_toBottomOf="@+id/txt_start_width"
        app:layout_constraintEnd_toEndOf="@+id/txt_end_length"
        app:layout_constraintStart_toStartOf="@+id/txt_end_length"
        app:layout_constraintTop_toBottomOf="@+id/txt_end_length"
        tools:text="240mm" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_length_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term_length"
        android:textAppearance="@style/body_2"
        android:textColor="@color/black_60"
        app:layout_constraintBottom_toBottomOf="@+id/txt_start_length"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_start_length" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term_width"
        android:textAppearance="@style/body_2"
        android:textColor="@color/black_60"
        app:layout_constraintBottom_toBottomOf="@+id/txt_start_width"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_start_width" />
</androidx.constraintlayout.widget.ConstraintLayout>