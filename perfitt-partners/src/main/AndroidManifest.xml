<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.perfitt.android.perfitt_partners">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application>
        <activity android:name=".activities.FootResultActivity"></activity>
        <activity
            android:name=".activities.A4DetectorActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="camera"
                    android:scheme="perfittpartners" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.KitDetectorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FootCameraConfirmActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TutorialWebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LandingActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>